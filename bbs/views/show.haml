%div.container
  %div.topic
    %h1
      = @title
    - @responses.each_with_index do |r, i|
      %div.response
        %h3
          = i
          = r[0]
        %p<
          = r[1]
  %div.col-sm-6
    %form(action="../response" method="POST")
      %div.form-group<
        %label.control-label(for="inputName")
          name
        %br<>
        %input.form-control#inputName(type="text" name="name" required)<>
      %div.form-group<
        %label.control-label(for="inputText")
          text
        %br<>
        %textarea.form-control#inputText(name="text" wrap="hard" required)<>
      %input(type="hidden" name="id" value="#{@id}")
      %div.form-group<
        %button.btn.btn-primary(type="submit") Submit
